# Maintainer: Robin Choudhury <rchoudhu@calpoly.edu>
pkgname=NAME-git
pkgver=20121230
pkgrel=1
pkgdesc="File tagging for *nix operating systems"
arch=('any')
url="https://github.com/HouzuoGuo/markafile"
license=('unknown')
groups=()
depends=('sqlite' 'python')
makedepends=('git')
provides=()
conflicts=()
install=
source=()
noextract=()
md5sums=() #generate with 'makepkg -g'

_gitroot=git://github.com/HouzuoGuo/markafile.git
_gitname=markafile

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  #
  # BUILD HERE
  #
}

package() {
  cd "$srcdir/$_gitname-build"
}

