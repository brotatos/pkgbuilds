# Maintainer: Robin Choudhury (brotatos) <rchoudhu at calpoly dot edu>
pkgname=kgpu-git
pkgver=20121221
pkgrel=1
pkgdesc="KGPU is a GPU computing freamework for the linux kernel that allows the kernel to call CUDA programs running on GPUs directly."
arch=('x86_64')
url="https://github.com/wbsun/kgpu"
license=('GPL')
depends=('linux>=2.6.39-4')
makedepends=('git' 'ecryptfs-utils')
#provides=()
#conflicts=()
#replaces=()
#backup=()
#options=()
#install=
#source=()

_gitroot=https://github.com/wbsun/kgpu.git
_gitname="kgpu"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"
  make all
}

package() {
  cd "$srcdir/$_gitname-build"
  make DESTDIR="$pkgdir/" install
}

